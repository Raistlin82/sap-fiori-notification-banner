{
  "name": "sap-fiori-notification-banner",
  "version": "1.0.0",
  "description": "Global Notification Banner for SAP Fiori Applications",
  "main": "webapp/Component.js",
  "scripts": {
    "build": "ui5 build --config ui5.yaml",
    "deploy": "npm run build && npm run deploy-to-abap",
    "deploy-to-abap": "ui5 deploy --config ui5-deploy.yaml",
    "start": "ui5 serve --config ui5.yaml --port 8080",
    "start:mock": "ui5 serve --config ui5.yaml --port 8080 --open test/unit/unitTests.qunit.html?sap-ui-xx-mockserver=true",
    "lint": "eslint webapp/",
    "test": "npm run test:unit && npm run test:integration && npm run lint",
    "test:unit": "echo 'Open http://localhost:8080/test/unit/unitTests.qunit.html for unit tests'",
    "test:integration": "echo 'Open http://localhost:8080/test/integration/opaTests.qunit.html for integration tests'",
    "test:watch": "npm run start & open http://localhost:8080/test/unit/unitTests.qunit.html",
    "clean": "rm -rf dist/",
    "watch": "ui5 serve --config ui5.yaml --port 8080 --open"
  },
  "keywords": [
    "SAP",
    "Fiori",
    "UI5",
    "Notification",
    "Banner",
    "S/4HANA"
  ],
  "author": "SAP Development Team",
  "license": "PROPRIETARY",
  "dependencies": {},
  "devDependencies": {
    "@ui5/cli": "^3.0.0",
    "@ui5/fs": "^3.0.0",
    "@ui5/builder": "^3.0.0",
    "@ui5/logger": "^3.0.0",
    "@ui5/project": "^3.0.0",
    "@ui5/server": "^3.0.0",
    "@sap/ux-ui5-tooling": "^1.12.0",
    "ui5-task-zipper": "^0.5.0",
    "eslint": "^8.50.0",
    "rimraf": "^5.0.0"
  },
  "ui5": {
    "dependencies": [
      "@ui5/cli",
      "ui5-task-zipper"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/sap-fiori-notification-banner.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/sap-fiori-notification-banner/issues"
  },
  "homepage": "https://github.com/your-org/sap-fiori-notification-banner#readme"
}